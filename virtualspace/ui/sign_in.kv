#:import _ virtualspace.utils.translation.gettext
#:import capfirst virtualspace.utils.text.capfirst

<SignInScreen>:
    GridLayout:
        padding: [20, 20, 20, 20]
        rows: 4
        cols: 2
        Label:
            text: capfirst(_('username'))
        TextInput:
            id: username_text_input
            hint_text: capfirst(_('username'))
        Label:
            text: capfirst(_('password'))
        TextInput:
            id: password_text_input
            hint_text: capfirst(_('password'))
            password: True
        Button:
            text: capfirst(_('sign in'))
            on_press: root.do_login(username_text_input.text, password_text_input.text)
        Button:
            text: capfirst(_('sign up'))
            on_press: root.manager.current = 'sign_up'
        Button:
            text: capfirst(_('exit'))
            on_press: app.stop()
