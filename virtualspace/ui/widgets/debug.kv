#:import hex kivy.utils.get_color_from_hex


<BlackGridLayout@GridLayout>
    canvas.before:
        Color:
            rgba: hex('#000000')
        Rectangle:
            pos: self.pos
            size: self.size

<WhiteGridLayout@GridLayout>
    canvas.before:
        Color:
            rgba: hex('#ffffff')
        Rectangle:
            pos: self.pos
            size: self.size

